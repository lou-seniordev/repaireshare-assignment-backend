{
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "target": "es2017",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build", // Types should go into this directory.
    "baseUrl": "./",                        /* Redirect output structure to the directory. */
    "rootDir": "./",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "/**/*.ts",
    "src/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}
